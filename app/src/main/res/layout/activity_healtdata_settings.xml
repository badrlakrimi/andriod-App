<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".healtdata_settings">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        />

    <TextView
        android:id="@+id/txt_health_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:text="Enter your Personal Data :"
        android:textColor="#F5070707"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/toolbar"
         />

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_health_data"
        android:layout_marginTop="30dp"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/age_l"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:background="@drawable/layaout_border_settings">



            <TextView
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textColor="#050505"
                android:textSize="16dp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/lbl_age"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textColor="#050505"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" yrs"
                    android:textColor="#050505"
                    android:textSize="16dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/height_l"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:paddingLeft="40dp"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/layaout_border_settings">



            <TextView
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textColor="#050505"
                android:textSize="16dp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/lbl_meters"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#050505"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" M "
                    android:textColor="#050505"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/lbl_cm"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="42"
                    android:textColor="#050505"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Cm"
                    android:textColor="#050505"
                    android:textSize="16dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/weight_l"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_width="250dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:background="@drawable/layaout_border_settings">



            <TextView
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textColor="#050505"
                android:textSize="16dp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <TextView
                        android:id="@+id/lbl_weight"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="78"
                    android:textColor="#050505"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Kg"
                    android:textColor="#050505"
                    android:textSize="16dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/levelS_l"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_width="250dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:background="@drawable/layaout_border_settings">



            <TextView
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Level"
                android:textColor="#050505"
                android:textSize="16dp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/lbl_level"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beginner"
                    android:textColor="#050505"
                    android:textSize="16dp"/>



            </LinearLayout>
        </LinearLayout>




    </LinearLayout>




</RelativeLayout>