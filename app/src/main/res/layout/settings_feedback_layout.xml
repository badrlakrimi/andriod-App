<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


    <TextView

        android:id="@+id/txt_title_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share your feed back :"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:textColor="#050505"
        android:textSize="18dp"
        android:textStyle="bold"

        />

    <EditText
        android:layout_below="@id/txt_title_feedback"
        android:id="@+id/txt_title_feed"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:hint="Subject"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/txt_description_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:lines="6"
        android:gravity="top"
        android:hint="Description"
        android:layout_below="@+id/txt_title_feed"


        />


</RelativeLayout>